\/a>and the<a href=\"http:\/\/www.fgv.br\/eventos\/?P_EVENTO=2185&amp;P_IDIOMA=0\"><strong> young researchers event<\/strong><\/a>.&nbsp;<\/p>\r\n<p>&nbsp;<\/p>","views":"170","shares":"4","tweets":"3","mails":"0","published":true,"image":true,"featured":false,"type":"1","created":"2014-04-25 09:46:00","modified":"2016-01-30 09:20:45"},"User":{"id":"1","email":"info@onebigrobot.com","first_name":"Administrator","last_name":null,"password":"c8d482e69d7de06cc7429d3b9484c8145fdfb818","code":"","role":"0","type":"0","published":true,"created":"2014-06-26 10:44:32","modified":"0000-00-00 00:00:00"},"Event":{"id":"89","datetime":"2014-10-22 09:00:00","country":"Brazil","city":"Rio de Janeiro","address":"","map":""},"Resource":[],"ContentTag":[{"id":"4079","content_id":"89","tag_id":"44","order":"0","created":"0000-00-00 00:00:00","modified":"0000-00-00 00:00:00","Tag":{"id":"44","code":"the-atlantic1","name":"The Atlantic","type":"1","mandatory":true,"color":"0068AD","created":"2013-10-30 14:16:17","modified":"2013-08-02 12:27:19"}},{"id":"4072","content_id":"89","tag_id":"54","order":"1","created":"0000-00-00 00:00:00","modified":"0000-00-00 00:00:00","Tag":{"id":"54","code":"perspectives","name":"Perspectives","type":"0","mandatory":false,"color":"FFFFFF","created":"2013-09-27 10:43:59","modified":"2013-09-27 10:43:59"}},{"id":"4073","content_id":"89","tag_id":"5","order":"2","created":"0000-00-00 00:00:00","modified":"0000-00-00 00:00:00","Tag":{"id":"5","code":"atlantic-space","name":"Atlantic space","type":"0","mandatory":false,"color":"FFFFFF","created":"2013-09-27 09:55:08","modified":"2013-09-27 09:55:08"}},{"id":"4074","content_id":"89","tag_id":"36","order":"3","created":"0000-00-00 00:00:00","modified":"0000-00-00 00:00:00","Tag":{"id":"36","code":"events","name":"Events","type":"0","mandatory":false,"color":"995B31","created":"2013-09-27 09:58:37","modified":"2013-09-27 09:58:37"}},{"id":"4075","content_id":"89","tag_id":"136","order":"4","created":"0000-00-00